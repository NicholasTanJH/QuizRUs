<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageButton
        android:id="@+id/buttonBackCreateQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:maxHeight="80dp"
        android:minHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_back"
        app:layout_constraintEnd_toStartOf="@+id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="470dp"
        android:layout_height="102dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:maxHeight="80dp"
        android:minHeight="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/quizruslogo"
        app:layout_constraintBottom_toTopOf="@+id/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBackCreateQuiz">

        <TextView
            android:id="@+id/quizMakeTitle"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="Create Your Quiz:"
            android:textColor="@color/colorWhite"
            android:textSize="60sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/quizMakeName"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Quiz Name:"
            android:textColor="@color/colorWhite"
            android:textSize="60sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/QuizNameHolder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="..."
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorWhite"
            android:textSize="60sp"
            android:background="@drawable/login_text_input_layout_background">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/QuizNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@android:color/white"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="60sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/NumQuestion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Time (In Minutes):"
            android:textColor="@color/colorWhite"
            android:textSize="60sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TimerHolder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="..."
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorWhite"
            android:textSize="60sp"
            android:background="@drawable/login_text_input_layout_background">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TimerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@android:color/white"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="25"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="60sp" />

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/buttonEditQuestion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:layout_weight="1"
            android:background="@drawable/login_button_background"
            android:text="Edit Questions"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="60sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>